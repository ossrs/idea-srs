<idea-plugin url="https://github.com/ossrs/srs-toolkit-idea">
    <id>net.ossrs.ideasrs</id>
    <name>SRS Toolkit</name>
    <vendor url="https://ossrs.net">OSSRS</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!--For extensions defined by intellij-->
    <extensions defaultExtensionNs="com.intellij">
        <!--SRS explorer is a tool window-->
        <projectService serviceImplementation="net.ossrs.ideasrs.explorer.SrsExplorerToolWindow"/>
        <toolWindow id="srs.explorer" anchor="left" secondary="true"
            factoryClass="net.ossrs.ideasrs.explorer.SrsExplorerFactory"
            icon="SrsIcons.Logos.SRS"/>
        <!--For help ID translation-->
        <webHelpProvider implementation="net.ossrs.ideasrs.explorer.SrsHelpIdTranslator"/>
    </extensions>

    <!--For extensions defined by SRS explorer-->
    <extensionPoints>
        <extensionPoint name="explorer.services" interface="net.ossrs.ideasrs.explorer.SrsExplorerService" dynamic="true"/>
    </extensionPoints>
    <extensions defaultExtensionNs="net.ossrs.ideasrs">
        <explorer.services implementation="net.ossrs.ideasrs.explorer.SrsExplorerServiceSRS"/>
        <explorer.services implementation="net.ossrs.ideasrs.explorer.SrsExplorerServiceFFmpeg"/>
    </extensions>

    <!--For actions-->
    <actions>
        <!--Refresh action for SRS explorer-->
        <action class="net.ossrs.ideasrs.explorer.SrsRefreshAction" id="srs.settings.refresh"/>

        <!--Actions for SRS server node-->
        <group id="net.ossrs.ideasrs.explorer.srs" popup="false" compact="false">
            <action id="srs.create.server" class="net.ossrs.ideasrs.explorer.SrsCreateServerAction"/>
        </group>
    </actions>
</idea-plugin>

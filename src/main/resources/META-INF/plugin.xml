<idea-plugin url="https://github.com/ossrs/srs-toolkit-idea">
    <id>net.ossrs.ideasrs</id>
    <name>SRS Toolkit</name>
    <vendor url="https://ossrs.net">OSSRS</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="net.ossrs.ideasrs.services.MyApplicationService"/>
        <projectService serviceImplementation="net.ossrs.ideasrs.services.MyProjectService"/>
        <!--SRS explorer is a tool window-->
        <projectService serviceImplementation="net.ossrs.ideasrs.explorer.SrsExplorerToolWindow"/>
        <toolWindow id="srs.explorer" anchor="left" secondary="true"
            factoryClass="net.ossrs.ideasrs.explorer.SrsExplorerFactory"
            icon="SrsIcons.Logos.SRS"/>
        <!--For help ID translation-->
        <webHelpProvider implementation="net.ossrs.ideasrs.explorer.SrsHelpIdTranslator"/>
    </extensions>

    <actions>
        <action class="net.ossrs.ideasrs.explorer.SrsRefreshAction" id="srs.settings.refresh"/>
    </actions>

    <applicationListeners>
        <listener class="net.ossrs.ideasrs.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
